{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["es6","DOM"],
    "target": "ES2020", // or higher
    "module": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
    }
  },
  "include": ["src/","src/**/*"]
}